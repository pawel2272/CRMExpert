@model List<ContactDataDto>

@{
    ViewData["Title"] = "Edit task";
}

<div class="container my-2">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    Select contact to display tasks
                </div>
                <div class="card-body">
                    <form method="post" asp-area="User" asp-controller="Task" asp-action="Select">
                        <div class="row mb-3">
                            <label for="contact" class="col-sm-3 col-form-label">Contact</label>
                            <div class="col-sm-9">
                                <select id="contact" class="form-select" name="id">
                                    @foreach (var contact in Model)
                                    {
                                        <option value="@contact.Id">@contact.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">OK</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>