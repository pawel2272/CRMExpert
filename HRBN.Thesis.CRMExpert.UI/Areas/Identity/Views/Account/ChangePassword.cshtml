@model ChangePasswordCommand

<div class="container my-2">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    Change password
                </div>
                <div class="card-body">
                    <form method="post" asp-area="Identity" asp-controller="Account" asp-action="ChangePassword">
                        @Html.HiddenFor(m => m.Id)
                        <div class="row mb-3">
                            <label for="oldPassword" class="col-sm-4 col-form-label">Old password</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="oldPassword" asp-for="OldPassword">
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="newPassword" class="col-sm-4 col-form-label">New password</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="newPassword" asp-for="NewPassword">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="repeatPassword" class="col-sm-4 col-form-label">Repeat password</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="repeatPassword" asp-for="RepeatPassword">
                                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-area="Identity" asp-controller="Account" asp-action="Manage" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>