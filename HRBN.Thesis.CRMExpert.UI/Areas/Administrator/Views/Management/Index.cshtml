<div class="container my-2">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4 my-2">
            <div class="card">
                <img src="~/img/permissions-image.svg" class="card-img-top" alt="products-image">
                <div class="card-body">
                    <h5 class="card-title">Permissions</h5>
                    <p class="card-text">Create, remove or edit permissions.</p>
                    <a asp-area="Administrator" asp-controller="Permission" asp-action="Index" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4 my-2">
            <div class="card">
                <img src="~/img/roles-image.svg" class="card-img-top" alt="orders-image">
                <div class="card-body">
                    <h5 class="card-title">Roles</h5>
                    <p class="card-text">Create, remove or edit roles.</p>
                    <a asp-area="Administrator" asp-controller="Role" asp-action="Index" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4 my-2">
            <div class="card">
                <img src="~/img/users-image.svg" class="card-img-top" alt="customers-image">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Register, edit or delete users.</p>
                    <a asp-area="Administrator" asp-controller="User" asp-action="Index" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    </div>
</div>